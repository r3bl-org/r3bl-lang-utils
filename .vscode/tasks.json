{
  "version": "2.0.0",
  "tasks": [
    {
      // Build.
      "type": "typescript",
      "tsconfig": "tsconfig.json",
      "problemMatcher": ["$tsc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "label": "tsc: build - tsconfig.json"
    },
    {
      // Test (watch).
      "type": "typescript",
      "tsconfig": "tsconfig.json",
      "option": "watch",
      "problemMatcher": ["$tsc-watch"],
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "label": "tsc: watch - tsconfig.json"
    }
  ]
}
