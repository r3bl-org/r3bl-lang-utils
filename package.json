{
  "name": "r3bl-ts-utils",
  "version": "1.0.50",
  "description": "TypeScript language utilities inspired by Kotlin stdlib, color console, React hook helpers, timer helpers, and other misc utilities",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "files": [
    "build/**/*",
    "src/**/*"
  ],
  "scripts": {
    "build": "rm -rf build && tsc",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "jest",
    "test-watch": "jest --watch",
    "prepare": "npm run build",
    "prepublishOnly": "npm run test",
    "preversion": "npm run test",
    "version": "npm run format && git add -A",
    "postversion": "git push && git push --tags",
    "lint": "eslint 'src/**/*.{ts,tsx}' --quiet --fix",
    "/*format-with-tsfmt*/": "https://github.com/vvakame/typescript-formatter",
    "format-with-tsfmt": "tsfmt -r"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/r3bl-org/r3bl-ts-utils.git"
  },
  "keywords": [
    "color console",
    "let",
    "with",
    "apply",
    "also",
    "React Hook",
    "timer",
    "setInterval",
    "Kotlin scope functions",
    "TypeScript",
    "sleep"
  ],
  "author": "Nazmul Idris",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/r3bl-org/r3bl-ts-utils/issues"
  },
  "homepage": "https://r3bl.com",
  "dependencies": {
    "colors": "^1.4.0",
    "debug": "^4.3.2",
    "lodash": "^4.17.21",
    "pretty-bytes": "^5.6.0",
    "typescript": "^4.2.2"
  },
  "devDependencies": {
    "@sindresorhus/tsconfig": "^2.0.0",
    "@testing-library/jest-dom": "^5.15.0",
    "@testing-library/react": "^12.1.2",
    "@types/jest": "latest",
    "@types/lodash": "latest",
    "@types/node": "latest",
    "@types/react-redux": "latest",
    "@typescript-eslint/eslint-plugin": "latest",
    "@typescript-eslint/parser": "latest",
    "eslint": "latest",
    "eslint-plugin-react": "latest",
    "eslint-plugin-react-hooks": "latest",
    "ink": "^3.2.0",
    "ink-testing-library": "^2.1.0",
    "jest": "latest",
    "nodemon": "latest",
    "npm-run-all": "latest",
    "prettier": "latest",
    "ts-jest": "latest",
    "ts-node": "latest",
    "typescript": "latest",
    "typescript-formatter": "latest",
    "console-testing-library": "^0.6.1"
  },
  "peerDependencies": {
    "@types/react": "^17.0.34",
    "react": "^17.0.2"
  },
  "peerDependenciesMeta": {
    "@types/react": {
      "optional": true
    }
  }
}
