{
  "compilerOptions": {
    "strict": true,
    "module": "CommonJS",
    "target": "ES6",
    "declaration": true,
    "sourceMap": true,
    "outDir": "build", // More info https://stackoverflow.com/a/49687441/2085356
    "allowSyntheticDefaultImports": true // More info: https://www.typescriptlang.org/tsconfig#allowSyntheticDefaultImports
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "**/__tests__/*"]
}
